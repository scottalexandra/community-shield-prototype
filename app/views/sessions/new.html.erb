<section class='container'>
  <h1>Community Shield</h1>
  <h4>Login to continue</h4>

  <%= form_tag('/login', method: :post) do %>
    <div class="icon-input">
      <i class="far fa-envelope icon"></i>
      <%= text_field_tag :email, nil, placeholder: 'Email', class: 'login' %>
    </div>
    <div class="icon-input">
      <i class="fas fa-lock icon"></i>
      <%= text_field_tag :password, nil, placeholder: 'Password', class: 'login'%>
    </div>
    <h4><%= link_to 'Forget Password?' %></h4>
    <%= submit_tag 'Login', class: 'button' %>
    <p class="new-account"><%= link_to 'Create New Account'%></p>
  <% end %>
</section>
